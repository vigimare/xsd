<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:event="http://www.cise.eu/datamodel/v1/entity/event/"
    xmlns:vigimare="https://github.com/vigimare/xsd"
    targetNamespace="http://www.cise.eu/datamodel/v1/entity/event/"
    elementFormDefault="qualified"
    attributeFormDefault="unqualified"
>

    <xs:include schemaLocation="../cise/entity/event/Event.xsd" />
    <xs:import namespace="https://github.com/vigimare/xsd" schemaLocation="Intention.xsd" />
    <xs:import namespace="https://github.com/vigimare/xsd" schemaLocation="Anomaly.xsd" />

    <xs:complexType name="VigimareAlert">
        <xs:complexContent>
            <xs:extension base="event:Event">
                <xs:annotation>
                    <xs:documentation>VigimareAlert</xs:documentation>
                </xs:annotation>
                <xs:sequence>
                    <xs:choice>
                        <xs:element ref="vigimare:Intention" maxOccurs="unbounded" />
                        <xs:element ref="vigimare:Anomaly" />
                    </xs:choice>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

</xs:schema>

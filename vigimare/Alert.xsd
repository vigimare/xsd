<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="https://github.com/vigimare/xsd"
    xmlns:vigimare="https://github.com/vigimare/xsd"
    elementFormDefault="qualified"
>

    <xs:include schemaLocation="Intention.xsd" />
    <xs:include schemaLocation="Anomaly.xsd" />

	<xs:element name="Alert">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>VigimareAlert class that extends CISE Alert</xs:documentation>
			</xs:annotation>
			<xs:sequence>
			    <xs:choice>
					<xs:element ref="vigimare:Intention" maxOccurs="unbounded" />
					<xs:element ref="vigimare:Anomaly" />
				</xs:choice>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
